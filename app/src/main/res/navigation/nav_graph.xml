<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.movielist.MovieFragment"
        android:label="MovieFragment"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_movieFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_movieFragment_to_detailsMovieFragment"
            app:destination="@id/detailsMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteMovieFragment"
        android:name="com.example.movielist.FavouriteMovieFragment"
        android:label="FavouriteMovieFragment"
        tools:layout="@layout/fragment_favourite_movie">
        <action
            android:id="@+id/action_favouriteMovieFragment_to_detailsMovieFragment"
            app:destination="@id/detailsMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.movielist.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_favouriteMovieFragment"
            app:destination="@id/favouriteMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.movielist.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.movielist.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signupFragment_to_movieFragment"
            app:destination="@id/movieFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/detailsMovieFragment"
        android:name="com.example.movielist.DetailsMovieFragment"
        android:label="DetailsMovieFragment"
        tools:layout="@layout/fragment_details_movie">
        <argument
            android:name="movie"
            app:argType="com.example.movielist.model.Movie"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="isFromFavorite"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>


</navigation>